set -e

. /etc/default/openmediavault
. /usr/share/openmediavault/scripts/helper-functions

SHELL_SITE_CONF="/etc/nginx/openmediavault-webgui.d/openmediavault-shell.conf"

if [ -e "${SHELL_SITE_CONF}" ]; then
    rm -f ${SHELL_SITE_CONF}
fi

if [ "$(omv_config_get "//system/shell/enable")" != "1" ]; then
    exit 0
fi

cat <<EOF > "${SHELL_SITE_CONF}"
location /shell/ {
    proxy_pass http://localhost:4200/;
}
EOF

exit 0
